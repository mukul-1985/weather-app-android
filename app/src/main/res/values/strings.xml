<resources xmlns:xliff="http://schemas.android.com/tools">
    <string name="app_name">Daily Weather</string>
    <!-- Setting menu item -->
    <string name="menu_settings">Settings</string>
    <!-- title for refresh menu item -->
    <string name="menu_refresh">Refresh</string>
    <string name="title_activity_detail">DetailActivity</string>
    <string name="action_settings">Settings</string>
    <string name="title_activity_settings">Settings</string>
    <string name="action_map">Map Location</string>

    <!-- Strings related to Settings -->
    <!-- Label for the location preference [CHAR LIMIT=30] -->
    <string name="pref_location_label">Location</string>

    <!-- Key name for storing location in SharedPreferences [CHAR LIMIT=NONE] -->
    <string name="pref_location_key" translatable="false">location</string>

    <!-- Default postal code for location preference [CHAR LIMIT=NONE] -->
    <string name="pref_location_default" translatable="false">94043</string>

    <!-- lable for the temperature units preference -->
    <string name="pref_temperature_units_label">Temperature Units</string>

    <!-- key name for storing temperature unit in sharedPreferences -->
    <string name="pref_temperature_units_key">units</string>

    <!--  temperature unit for the units preference -->
    <string name="pref_temperature_units_metric">metric</string>
    <string name="pref_temperature_units_imperial">imperial</string>
    <string name="pref_temperature_units_metric_label">Metric</string>
    <string name="pref_temperature_units_imperial_label">Imperial</string>

    <!-- Date label when displaying today's weather forecast [CHAR LIMIT=20] -->
    <string name="today">Today</string>

    <!-- Date label when displaying tomorrow's weather forecast [CHAR LIMIT=20] -->
    <string name="tomorrow">Tomorrow</string>

    <!-- Date format for displaying day of week and date (i.e. Mon Jun 1) [CHAR LIMIT=20] -->
    <string name="format_full_friendly_date"><xliff:g id="day">%1$s</xliff:g>, <xliff:g id="date">%2$s</xliff:g></string>

    <!-- Temperature formats in degrees [CHAR LIMIT=NONE] -->
    <string name="format_temperature"><xliff:g id="temp">%1.0f</xliff:g>\u00B0</string>
</resources>
